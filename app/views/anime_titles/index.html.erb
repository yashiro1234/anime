<p id="notice"><%= notice %></p>

<h1>Listing Anime Titles</h1>

<table>
  <thead>
    <tr>
      <th>Tid</th>
      <th>Title</th>
      <th>Short title</th>
      <th>Title yomi</th>
      <th>Title en</th>
      <th>Comment</th>
      <th>Cat</th>
      <th>Title flag</th>
      <th>First year</th>
      <th>First month</th>
      <th>First end year</th>
      <th>First end month</th>
      <th>First chid</th>
      <th>Keywords</th>
      <th>User point</th>
      <th>User point rank</th>
      <th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anime_titles.each do |anime_title| %>
      <tr>
        <td><%= anime_title.tid %></td>
        <td><%= anime_title.title %></td>
        <td><%= anime_title.short_title %></td>
        <td><%= anime_title.title_yomi %></td>
        <td><%= anime_title.title_en %></td>
        <td><%= anime_title.comment %></td>
        <td><%= anime_title.cat %></td>
        <td><%= anime_title.title_flag %></td>
        <td><%= anime_title.first_year %></td>
        <td><%= anime_title.first_month %></td>
        <td><%= anime_title.first_end_year %></td>
        <td><%= anime_title.first_end_month %></td>
        <td><%= anime_title.first_chid %></td>
        <td><%= anime_title.keywords %></td>
        <td><%= anime_title.user_point %></td>
        <td><%= anime_title.user_point_rank %></td>
        <td><%= anime_title.last_update %></td>
        <td><%= link_to 'Show', anime_title %></td>
        <td><%= link_to 'Edit', edit_anime_title_path(anime_title) %></td>
        <td><%= link_to 'Destroy', anime_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

